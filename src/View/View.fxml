<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/9.0.1" fx:controller="View.Controller">
    <children>
        <GridPane layoutX="3.0" layoutY="4.0" prefHeight="394.0" prefWidth="593.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="311.0" minWidth="10.0" prefWidth="298.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="460.0" minWidth="10.0" prefWidth="295.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="143.0" minWidth="10.0" prefWidth="113.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="184.0" minWidth="10.0" prefWidth="184.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label prefHeight="23.0" prefWidth="69.0" text="Root Path:"/>
                        <TextField id="tIn" fx:id="tIn" text=""
                                   GridPane.columnIndex="1"/>
                        <TextField id="tOut" fx:id="tOut" text=""
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Label prefHeight="17.0" prefWidth="100.0" text="Destination Path:" GridPane.rowIndex="1"/>
                        <CheckBox fx:id="cStemer" mnemonicParsing="false" text="Stemer" GridPane.rowIndex="2"/>
                        <Button id="bStartIndexing" fx:id="bStartIndexing" alignment="CENTER" mnemonicParsing="false"
                                onAction="#startIndexing" text="Start Indexing" GridPane.columnIndex="1"
                                GridPane.rowIndex="2"/>
                    </children>
                </GridPane>
                <GridPane GridPane.columnIndex="1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Button fx:id="bSelectRoot" mnemonicParsing="false" onAction="#brwsTIN" text="select Root"/>
                        <Button fx:id="bSelectDest" mnemonicParsing="false" onAction="#brwsTOUT" prefHeight="25.0"
                                prefWidth="125.0" text="select Destination" GridPane.rowIndex="1"/>
                        <Button fx:id="bReset" mnemonicParsing="false" onAction="#reset" text="Reset Engine"
                                GridPane.rowIndex="2"/>
                    </children>
                </GridPane>
                <GridPane alignment="CENTER" GridPane.rowIndex="1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="185.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="144.0" minWidth="10.0" prefWidth="113.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Button fx:id="bSaveDC" mnemonicParsing="false" onAction="#saveDC" prefHeight="25.0"
                                prefWidth="158.0" text="Save Dictionary &amp; cache"/>
                        <Button fx:id="bLoadDC" mnemonicParsing="false" onAction="#bLoadDC" prefHeight="25.0"
                                prefWidth="158.0" text="Load Dictionary &amp; cache" GridPane.rowIndex="1"/>
                        <Button fx:id="bShowCache" alignment="CENTER" mnemonicParsing="false" onAction="#openCh"
                                text="Show cache" GridPane.columnIndex="1"/>
                        <Button fx:id="bShowDic" mnemonicParsing="false" onAction="#openDi" prefHeight="25.0"
                                prefWidth="114.0" text="Show Dictionary" GridPane.columnIndex="1"
                                GridPane.rowIndex="1"/>
                    </children>
                </GridPane>
                <Label fx:id="DBInfo" alignment="CENTER" prefHeight="130.0" prefWidth="296.0" GridPane.rowIndex="2"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>
